	<form action="/" method="get">
	<label for="semester">Semester:</label>
	<input type="text" id="semester" name="semester" placeholder="Enter semester">


	<label for="year">Year:</label>
	<input type="number" id="year" name="year" placeholder="Enter year">

	<label for="professor">Professor's Name:</label>
	<input type="text" id="professor" name="professor" placeholder="Enter professor's name">

	<button type="submit">Filter</button>

	<button type="clear">Clear Filters</button>
	</form>

<table class="reviews-table">
  <thead>
    <tr>
      <th>Course Number</th>
      <th>Course Name</th>
      <th>Semester</th>
      <th>Year</th>
      <th>Professor Name</th>
      <th>Review</th>
    </tr>
  </thead>
  <tbody>
    {{#each reviews}}
    <tr>
      <td>{{courseNumber}}</td>
      <td>{{courseName}}</td>
      <td>{{semester}}</td>
      <td>{{year}}</td>
      <td>{{professor}}</td>
      <td>{{review}}</td>
    </tr>
    {{/each}}
  </tbody>
</table>
